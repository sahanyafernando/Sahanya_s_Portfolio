# Server Configuration
PORT=3000
NODE_ENV=development

# Email Configuration
# Choose one email service: 'gmail', 'sendgrid', 'resend', or 'smtp'
EMAIL_SERVICE=gmail

# For Gmail (requires App Password, not regular password)
# Get App Password: https://support.google.com/accounts/answer/185833
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-here

# For SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# For Resend (Recommended - Free tier available)
# RESEND_API_KEY=re_your-api-key-here
# EMAIL_FROM=noreply@yourdomain.com

# For Custom SMTP
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# EMAIL_USER=your-email@example.com
# EMAIL_PASS=your-password

# Where to send contact form messages
EMAIL_TO=your-email@gmail.com
EMAIL_FROM=your-email@gmail.com

# Send confirmation email to sender (true/false)
SEND_CONFIRMATION=false

